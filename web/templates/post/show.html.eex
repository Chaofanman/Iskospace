<h4> <%= @post.title %></h4>
<%= link @post.user.username, to: user_path(@conn, :show, @post.user) %></p>
<p> <%= @post.body %> </p>

<%= if @conn.assigns[:user] do %>
  <%= render Iskospace.CommentView, "new.html", changeset: @comment_changeset, action: post_comment_path(@conn, :create, @post) %>
<% end %>

<div class="comments">
 <h2>Comments</h2>
 <%= for comment <- @post.comments do %>
   <%= render Iskospace.CommentView, "comment.html", comment: comment %>
   <br>
 <% end %>
</div>